# Import libraries
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load processed data
df = pd.read_csv("../data/processed/processed_data.csv")

# Display first rows
print("First 5 rows of processed data:")
display(df.head())

# Basic info
print("\nData Info:")
print(df.info())

# Summary statistics
print("\nSummary statistics:")
display(df.describe())

# ------------------------------
# 1. Traffic Density over Time
# ------------------------------
plt.figure(figsize=(10,5))
sns.lineplot(data=df, x='timestamp', y='traffic_density', hue='location', marker='o')
plt.title("Traffic Density Over Time by Location")
plt.xticks(rotation=45)
plt.tight_layout()
plt.show()

# ------------------------------
# 2. Temperature & Humidity Trends
# ------------------------------
plt.figure(figsize=(10,5))
sns.lineplot(data=df, x='timestamp', y='temperature', hue='location', marker='o')
plt.title("Temperature Over Time by Location")
plt.xticks(rotation=45)
plt.tight_layout()
plt.show()

plt.figure(figsize=(10,5))
sns.lineplot(data=df, x='timestamp', y='humidity', hue='location', marker='o')
plt.title("Humidity Over Time by Location")
plt.xticks(rotation=45)
plt.tight_layout()
plt.show()

# ------------------------------
# 3. Gas Price Trends
# ------------------------------
plt.figure(figsize=(10,5))
sns.lineplot(data=df, x='timestamp', y='price_per_litre', hue='location', marker='o')
plt.title("Gas Prices Over Time by Location")
plt.xticks(rotation=45)
plt.tight_layout()
plt.show()

# ------------------------------
# 4. Correlation Heatmap
# ------------------------------
plt.figure(figsize=(6,5))
sns.heatmap(df[['traffic_density','temperature','humidity','price_per_litre']].corr(), annot=True, cmap='coolwarm')
plt.title("Feature Correlation Heatmap")
plt.show()
